#!/usr/bin/env bash

#       path
# Shortcut to view paths for different tools.

set -eu

git log --abbrev-commit --decorate \
    --format=format:'%C(26)%d%C(reset)%n %C(220)%<(9)%h%C(reset) %<(21,trunc)%C(241)%ar%C(reset) %<(18,trunc)%C(222)%an%C(reset) %s' \
    | perl -pe 's/\x1b\[[0-9;]*m\x1b\[m\n//g' | less -FrX
