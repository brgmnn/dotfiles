#!/usr/bin/env bash

#       git-replace-author
# Updates an authors name and email address given an old name in a git
# repos history.
#   $1 = Old authors name
#   $2 = New authors name
#   $3 = New authors email

set -e
if [ ! "$1" ]; then
    echo "$0: Takes three arguments." >&2
    exit
fi
if [ ! "$2" ]; then
    echo "$0: Takes three arguments." >&2
    exit
fi
if [ ! "$3" ]; then
    echo "$0: Takes three arguments." >&2
    exit
fi

cmd='if [ "$GIT_COMMITTER_NAME" = "'$1'" ];
then
    GIT_COMMITTER_NAME="'$2'";
    GIT_AUTHOR_NAME="'$2'";
    GIT_COMMITTER_EMAIL="'$3'";
    GIT_AUTHOR_EMAIL="'$3'";
    git commit-tree "$@";
else
    git commit-tree "$@";
fi'

# Bugged at the moment, problem getting git to run from the shell.
echo git filter-branch --commit-filter $cmd HEAD
