alias -s hh=$EDITOR
alias -s hpp=$EDITOR
alias -s htm=$BROWSER
alias -s html=$BROWSER
alias -s m4a=$PLAYER
alias -s md=$EDITOR
alias -s mkv=$PLAYER
alias -s mp3=$PLAYER
alias -s mp4=$PLAYER
alias -s ogg=$PLAYER
alias -s py=$EDITOR
alias -s sh=$EDITOR
alias -s tex=$EDITOR
alias -s txt=$EDITOR
